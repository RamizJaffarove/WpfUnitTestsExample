<Window x:Class="WpfUnitTestsExamble.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WpfUnitTestsExamble.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10" Orientation="Vertical">
        <CheckBox IsChecked="{Binding ReturnOne}" Content="Return one" Padding="5" VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Result: " HorizontalAlignment="Left"/>
            <Label Content="{Binding CalculationResult}" HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>
